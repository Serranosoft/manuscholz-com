---
import Text from "../Text/Text.astro";
import styles from "./Info.module.scss";
const { content } = Astro.props;
---

<div class={styles.container}>
    <div class={styles.wrapper}>
        <svg width="800px" height="800px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <g>
                <path fill="#fff" d="M12 11V16M12 21C7.02944 21 3 16.9706 3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12C21 16.9706 16.9706 21 12 21ZM12.0498 8V8.1L11.9502 8.1002V8H12.0498Z" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </g>
        </svg>

        <div class={styles.content}>
            <Text smallSize>{content}</Text>
        </div>
    </div>
</div>